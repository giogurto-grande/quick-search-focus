{
  "manifest_version": 2,
  "name": "Quick Search Focus",
  "version": "0.5",
  "description": "This Chrome Extension enables you to focus on any page's search box using the forward slash key.",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "32": "icons/icon32.png",
      "16": "icons/icon16.png"
    },
    "default_title": "Quick Search Focus",
    "default_popup": "browser-action.html"
  },
  "icons": {
    "128": "icons/icon128.png",
    "48": "icons/icon48.png",
    "32": "icons/icon32.png",
    "16": "icons/icon16.png"
  }
}
